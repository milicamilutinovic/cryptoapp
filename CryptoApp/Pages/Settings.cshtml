@page
@model CryptoApp.Pages.SettingsModel
@{
    ViewData["Title"] = "Podešavanja aplikacije";
}

<style>
    .settings-container {
        max-width: 520px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: #1e1e2f;
        border: 2px solid #7b4ae2;
        border-radius: 12px;
        box-shadow: 0 0 15px #7b4ae2aa;
        color: #eee;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 600;
    }

    h1 {
        text-align: center;
        color: #ddd;
        margin-bottom: 2.5rem;
        font-weight: 700;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        color: #bbb;
        font-size: 1.1rem;
    }

    input[type="text"],
    select {
        width: 100%;
        padding: 0.6rem 1rem;
        margin-bottom: 1.5rem;
        border-radius: 8px;
        border: 1.5px solid #7b4ae2;
        background-color: #121212;
        color: #eee;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.3s ease;
    }

        input[type="text"]:focus,
        select:focus {
            border-color: #9f7eff;
            box-shadow: 0 0 8px #9f7effaa;
        }

    input[type="checkbox"] {
        width: auto;
        transform: scale(1.3);
        margin-right: 0.5rem;
        vertical-align: middle;
        cursor: pointer;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        color: #bbb;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
    }

    input[type="submit"] {
        width: 100%;
        padding: 1rem 0;
        border: none;
        border-radius: 50px;
        background: linear-gradient(45deg, #7b4ae2, #9f7eff);
        color: white;
        font-size: 1.3rem;
        font-weight: 700;
        cursor: pointer;
        box-shadow: 0 0 15px #7b4ae2aa;
        transition: all 0.4s ease;
    }

        input[type="submit"]:hover {
            box-shadow: 0 0 25px #9f7effcc;
            transform: scale(1.05);
        }

    .message-success {
        max-width: 520px;
        margin: 2rem auto 0 auto;
        color: #6fcf97;
        font-weight: 700;
        font-size: 1.1rem;
        text-align: center;
    }
</style>

<h1>Podešavanja aplikacije</h1>

<div class="settings-container">
    <form method="post">
        <label for="EncryptedFilesDirectory">Folder za šifrovane fajlove:</label>
        <input type="text" id="EncryptedFilesDirectory" name="EncryptedFilesDirectory" value="@Model.Settings.EncryptedFilesDirectory" />

        <label for="TargetDirectory">Folder koji FileWatcher prati:</label>
        <input type="text" id="TargetDirectory" name="TargetDirectory" value="@Model.Settings.TargetDirectory" />

        <label class="checkbox-label" for="IsFileWatcherEnabled">
            <input type="checkbox" id="IsFileWatcherEnabled" name="IsFileWatcherEnabled" @(Model.Settings.IsFileWatcherEnabled ? "checked" : "") />
            Aktiviraj FileWatcher servis
        </label>

        <label class="checkbox-label" for="IsFileExchangeEnabled">
            <input type="checkbox" id="IsFileExchangeEnabled" name="IsFileExchangeEnabled" @(Model.Settings.IsFileExchangeEnabled ? "checked" : "") />
            Aktiviraj razmenu fajlova (TCP)
        </label>

        <label for="SelectedEncryptionAlgorithm">Izabrani algoritam za enkripciju:</label>
        <select id="SelectedEncryptionAlgorithm" name="SelectedEncryptionAlgorithm">
            <option value="RC4" selected="@(Model.Settings.SelectedEncryptionAlgorithm == "RC4")">RC4</option>
            <option value="XTEA" selected="@(Model.Settings.SelectedEncryptionAlgorithm == "XTEA")">XTEA</option>
            <option value="XTEA-CBC" selected="@(Model.Settings.SelectedEncryptionAlgorithm == "XTEA-CBC")">XTEA-CBC</option>
        </select>

        <label for="SelectedHashAlgorithm">Izabrani heš algoritam:</label>
        <input type="text" id="SelectedHashAlgorithm" name="SelectedHashAlgorithm" value="@Model.Settings.SelectedHashAlgorithm" />

        <input type="submit" value="Sačuvaj podešavanja" />
    </form>
</div>


@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <p class="message-success">@Model.StatusMessage</p>
}
