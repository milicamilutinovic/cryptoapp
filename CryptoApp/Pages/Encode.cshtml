@page
@model CryptoApp.Pages.EncodeModel
@{
    ViewData["Title"] = "Šifrovanje fajla";
}

<style>
    /* Centrirana forma, max širina i tamna pozadina */
    .encrypt-form-container {
        max-width: 480px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: #1e1e2f;
        border: 2px solid #7b4ae2;
        border-radius: 12px;
        box-shadow: 0 0 15px #7b4ae2aa;
        color: #eee;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 600;
    }

    h1 {
        text-align: center;
        color: #ddd;
        margin-bottom: 2rem;
        font-weight: 700;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        color: #bbb;
        font-size: 1.1rem;
    }

    input[type="file"],
    input[type="text"],
    select {
        width: 100%;
        padding: 0.6rem 1rem;
        margin-bottom: 1.5rem;
        border-radius: 8px;
        border: 1.5px solid #7b4ae2;
        background-color: #121212;
        color: #eee;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.3s ease;
    }

    input[type="file"] {
        padding: 0.3rem 1rem;
    }

        input[type="text"]:focus,
        select:focus,
        input[type="file"]:focus {
            border-color: #9f7eff;
            box-shadow: 0 0 8px #9f7effaa;
        }

    input[type="submit"] {
        width: 100%;
        padding: 1rem 0;
        border: none;
        border-radius: 50px;
        background: linear-gradient(45deg, #7b4ae2, #9f7eff);
        color: white;
        font-size: 1.3rem;
        font-weight: 700;
        cursor: pointer;
        box-shadow: 0 0 15px #7b4ae2aa;
        transition: all 0.4s ease;
    }

        input[type="submit"]:hover {
            box-shadow: 0 0 25px #9f7effcc;
            transform: scale(1.05);
        }

    .message-success {
        max-width: 480px;
        margin: 2rem auto 0 auto;
        color: #9f7eff;
        font-weight: 700;
        font-size: 1.1rem;
        text-align: center;
    }

        .message-success a {
            color: #7b4ae2;
            text-decoration: none;
            font-weight: 700;
        }

            .message-success a:hover {
                text-decoration: underline;
            }

    .message-error {
        max-width: 480px;
        margin: 1.5rem auto 0 auto;
        color: #e74c3c;
        font-weight: 700;
        font-size: 1.1rem;
        text-align: center;
    }
</style>

<h1>Šifrovanje fajla</h1>

<div class="encrypt-form-container">
    <form method="post" enctype="multipart/form-data">
        <label for="fileUpload">Izaberite fajl za šifrovanje:</label>
        <input type="file" id="fileUpload" name="UploadedFile" required />

        <label for="keyInput">Unesite ključ (u tekstualnom obliku):</label>
        <input type="text" id="keyInput" name="Key" required />

        <label for="algorithmSelect">Izaberite algoritam:</label>
        <select id="algorithmSelect" name="Algorithm" required>
            <option value="RC4">RC4</option>
            <option value="XTEA">XTEA</option>
            <option value="XTEA-CBC">XTEA-CBC</option>
        </select>

        <input type="submit" value="Šifruj fajl" />
    </form>
</div>

@if (!string.IsNullOrEmpty(Model.EncryptedFilePath))
{
    <p class="message-success">
        Fajl uspešno šifrovan:
        <a href="@Url.Content($"~/{Model.EncryptedFilePath}")" target="_blank" rel="noopener noreferrer">Preuzmi ovde</a>
    </p>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p class="message-error">@Model.ErrorMessage</p>
}
